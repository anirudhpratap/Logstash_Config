input {
  file {
    path => "C:/elasti_kibana/data/cars.csv"
    start_position => "beginning"
    type => "syslog"
    sincedb_path => "/dev/null"
  }
}
 
filter{
	csv {
		separator => ","
		columns => ["maker" ,"model", "mileage", "manufacture_year", "enginer_displacement", "engine_power", "body_type", "color_slug", "stk_year", "transmission", "door_count", "seat_count", "fuel_type", "date_created", "date_last_seen", "price_eur"]
	}

	mutate {convert => ["mileage", "integer"]}
	mutate {convert => ["manufacture_year", "integer"]}
	mutate {convert => ["enginer_displacement", "integer"]}
	mutate {convert => ["engine_power", "integer"]}
	mutate {convert => ["door_count", "integer"]}
	mutate {convert => ["seat_count", "integer"]}
	mutate {convert => ["price_eur", "float"]}
}

output {
	elasticsearch{
		hosts => "localhost"
		index => "cars"
		document_type => "sold_cars"
	}
	stdout{}
}